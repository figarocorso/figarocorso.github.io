                  <!-- g+ -->
                  <div class="g-plusone" data-size="medium" data-href="http://www.genbeta.com/ofimatica/word-2007-como-editor-de-textos-minimalista" data-callback="gplusClickHandler" ></div>
                  <!-- facebook like -->
                  <div href="http://www.genbeta.com/ofimatica/word-2007-como-editor-de-textos-minimalista" class="fb-like" data-send="false" data-layout="button_count" data-show-faces="false"></div>
