                  <!-- g+ -->
                  <div class="g-plusone" data-size="medium" data-href="http://www.genbeta.com/web/guarda-fragmentos-y-citas-organizados-con-citelighter" data-callback="gplusClickHandler" ></div>
                  <!-- facebook like -->
                  <div href="http://www.genbeta.com/web/guarda-fragmentos-y-citas-organizados-con-citelighter" class="fb-like" data-send="false" data-layout="button_count" data-show-faces="false"></div>
